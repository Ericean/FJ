<h1>Listing Images</h1>
<div class="font-mid"><%= link_to 'Show Result', result_path%></div>
<table class="table table-striped font-mid">
  <thead>
    <tr>
      <th>Character</th>
      <th>Decided?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr style="height: 90px">
        <td><%= image_tag(image.url, :border => 0) %></td>
        <td><%= image.flag ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', image %></td>
        <% if current_user.name === "admin" %>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @images%>
<% if current_user.name === "admin" %>
  <div class="font-mid"><%= link_to 'New Image', new_image_path %></div>
<% end %>