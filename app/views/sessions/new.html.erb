<div class="inner-bg">

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
      <div class="form-top">
        <div class="form-top-left">
          <h3>Login to our site</h3>
          <p>Enter your username and password to log on:</p>
        </div>
        <div class="form-top-right">
          <i class="fa fa-key"></i>
        </div>
      </div>
      <div class="form-bottom">
        <%= form_for :admin, url: sessions_path do |f| %>
            <div class="form-group">
              <%= f.text_field :name, :class => 'form-username form-control', :id => 'form-username', :placeholder => 'Username' %>
            </div>
            <div class="form-group">
              <%= f.text_field :password, :type => 'password', :class => 'form-password form-control', :id => 'form-password', :placeholder => 'Password' %>
            </div>
            <div class="form-group">
              <%= f.button "Login", :class => 'btn' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

</div>