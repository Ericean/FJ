<tr>
  <td class="font-big" width="160">
    <%= candidate.content %>
  </td>
  <td>
    <%= link_to image_tag("vote.svg.png", :border => 0, :height => 45), [@image, candidate], method: :put %>
  </td>
  <td class="font-mid center">
      <div style="margin-top: 5px">
        Sum:<%= candidate.votesum %>&nbsp;
        <% if current_user.name === "admin" %>
          <%= link_to "Delete", [@image, candidate], method: :delete, data: {confirm: 'Are you sure?'} %>
          <%if @image.pinned? %>
              <% if @image.pinned_id == candidate.id%>
              <%= link_to "Unpin", pin_path(@image, candidate), method: :post %>
              <% end %>
          <% else %>
              <%= link_to "Pin", pin_path(@image, candidate), method: :post %>
          <% end %>
        <% end %>
      </div>
  </td>
</tr>