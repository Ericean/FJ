@import "bootstrap";
.content{
	position: relative;
	align:center;
}

.book-title { font: bold 15px arial, sans-serif; }
.note-title { font: bold 12px arial, sans-serif; }
.candidate { padding-bottom: 10px; font-size: 3em; }

.candidate.content {
	background: lightgray;
	margin: 15px;
    padding: 5px;
	border: 1px solid;
	border-radius: 5px;
	width: 300px;
}
h1{
	color: purple;
}
#notice  { color: green; }
#alert   { color: red; }
.field   { margin: 5px; }
.actions { margin: 10px 0px; }

.selected {
  outline: #ED0036 2px solid;
  *border: #ED0036 2px solid;
  *margin: -2px;
  background: url(<%=asset_path 'check.gif'%>) no-repeat bottom right;
}

.current {
  outline: #ED0036 2px solid;
  *border: #ED0036 2px solid;
  *margin: -2px;
}

#opt-list .opt {
  cursor: pointer;
  font-size: 7em;
  text-align: center;
  font-family: 楷体;
}

.not-opt {
  padding-top: 10px;
}

.col-md-6 {
  *width: 45%;
  *float: left;
}

.col-xs-4 {
  *width: 23%;
  *float: left;
}

.hidden {
  display: none;
}

#context{
  ul{
    width:80px;
    float: left;
  }
}
.input-lg{
  padding-top: 5px;
}